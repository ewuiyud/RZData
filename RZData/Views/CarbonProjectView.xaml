<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Views"
       xmlns:System="clr-namespace:System;assembly=mscorlib" x:Name="window" x:Class="Views.CarbonProjectView"
        mc:Ignorable="d"
        Title="隐含碳计算" Height="500" Width="800" Foreground="Black">
    <Grid>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="VisualStateGroup">
                <VisualStateGroup.Transitions>
                    <VisualTransition GeneratedDuration="00:00:00">
                        <Storyboard>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="ProjectName" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame KeyTime="00:00:00" Value="{StaticResource {x:Static SystemColors.AppWorkspaceColorKey}}"/>
                            </ColorAnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="border" Storyboard.TargetProperty="(Border.CornerRadius)">
                                <DiscreteObjectKeyFrame KeyTime="00:00:00">
                                    <DiscreteObjectKeyFrame.Value>
                                        <CornerRadius>3,3,3,3</CornerRadius>
                                    </DiscreteObjectKeyFrame.Value>
                                </DiscreteObjectKeyFrame>
                            </ObjectAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ProjectName" Storyboard.TargetProperty="(FrameworkElement.Height)">
                                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="35"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="ProjectName" Storyboard.TargetProperty="(Control.FontSize)">
                                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="20"/>
                            </DoubleAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="border" Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FF8A8A8A"/>
                            </ColorAnimationUsingKeyFrames>
                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="ProjectName" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                                <EasingThicknessKeyFrame KeyTime="00:00:00" Value="0,0,10,0"/>
                            </ThicknessAnimationUsingKeyFrames>
                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="border" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                                <EasingThicknessKeyFrame KeyTime="00:00:00" Value="20,-1,20,20"/>
                            </ThicknessAnimationUsingKeyFrames>
                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="label" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                                <EasingThicknessKeyFrame KeyTime="00:00:00" Value="20,0,20,0"/>
                            </ThicknessAnimationUsingKeyFrames>
                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="label1" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                                <EasingThicknessKeyFrame KeyTime="00:00:00" Value="20,0,20,0"/>
                            </ThicknessAnimationUsingKeyFrames>
                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="comboBox" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                                <EasingThicknessKeyFrame KeyTime="00:00:00" Value="20,0,0,0"/>
                            </ThicknessAnimationUsingKeyFrames>
                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="comboBox1" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                                <EasingThicknessKeyFrame KeyTime="00:00:00" Value="20,0,0,0"/>
                            </ThicknessAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="comboBox" Storyboard.TargetProperty="(FrameworkElement.Height)">
                                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="35"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="comboBox1" Storyboard.TargetProperty="(FrameworkElement.Height)">
                                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="35"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="comboBox2" Storyboard.TargetProperty="(FrameworkElement.Height)">
                                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="35"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="comboBox3" Storyboard.TargetProperty="(FrameworkElement.Height)">
                                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="35"/>
                            </DoubleAnimationUsingKeyFrames>
                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="comboBox2" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                                <EasingThicknessKeyFrame KeyTime="00:00:00" Value="20,0,0,0"/>
                            </ThicknessAnimationUsingKeyFrames>
                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="comboBox3" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                                <EasingThicknessKeyFrame KeyTime="00:00:00" Value="20,0,0,0"/>
                            </ThicknessAnimationUsingKeyFrames>
                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="label2" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                                <EasingThicknessKeyFrame KeyTime="00:00:00" Value="20,0,0,0"/>
                            </ThicknessAnimationUsingKeyFrames>
                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="label3" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                                <EasingThicknessKeyFrame KeyTime="00:00:00" Value="20,0,0,0"/>
                            </ThicknessAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="comboBox1" Storyboard.TargetProperty="(Control.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)">
                                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFF7F0F0"/>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="comboBox2" Storyboard.TargetProperty="(Control.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)">
                                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFF7F0F0"/>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="comboBox3" Storyboard.TargetProperty="(Control.Background).(GradientBrush.GradientStops)[1].(GradientStop.Color)">
                                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFF7F0F0"/>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="comboBox1" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFF3EFEF"/>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="comboBox2" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFF3EFEF"/>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="comboBox3" Storyboard.TargetProperty="(Control.BorderBrush).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFF3EFEF"/>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="comboBox1" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFF1E9E9"/>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="comboBox2" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFF1E9E9"/>
                            </ColorAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="comboBox3" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame KeyTime="00:00:00" Value="#FFF1E9E9"/>
                            </ColorAnimationUsingKeyFrames>
                            <Int32AnimationUsingKeyFrames Storyboard.TargetName="comboBox1" Storyboard.TargetProperty="(Selector.SelectedIndex)">
                                <EasingInt32KeyFrame KeyTime="00:00:00" Value="0"/>
                            </Int32AnimationUsingKeyFrames>
                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="button" Storyboard.TargetProperty="(ContentControl.Content)">
                                <DiscreteObjectKeyFrame KeyTime="00:00:00" Value="建筑工程"/>
                            </ObjectAnimationUsingKeyFrames>
                            <ColorAnimationUsingKeyFrames Storyboard.TargetName="window" Storyboard.TargetProperty="(Control.Foreground).(SolidColorBrush.Color)">
                                <EasingColorKeyFrame KeyTime="00:00:00" Value="{StaticResource {x:Static SystemColors.AppWorkspaceColorKey}}"/>
                            </ColorAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="comboBox2" Storyboard.TargetProperty="(FrameworkElement.Width)">
                                <EasingDoubleKeyFrame KeyTime="00:00:00" Value="186"/>
                            </DoubleAnimationUsingKeyFrames>
                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="comboBox4" Storyboard.TargetProperty="(FrameworkElement.Margin)">
                                <EasingThicknessKeyFrame KeyTime="00:00:00" Value="20,0,20,20"/>
                            </ThicknessAnimationUsingKeyFrames>
                        </Storyboard>
                    </VisualTransition>
                </VisualStateGroup.Transitions>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <StackPanel>
            <Label Content="项目名称：" FontFamily="微软雅黑 light" FontSize="25" Margin="20,20,0,0"/>
            <Border x:Name="border" Margin="20" BorderBrush="Black" BorderThickness="1">
                <TextBox x:Name="ProjectName" FontFamily="微软雅黑 light" Text="请输入项目名称" VerticalContentAlignment="Center" FontSize="25" Foreground="gray" Height="35" Width="780" Margin="0,0,0,0">
                </TextBox>
            </Border>
            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label x:Name="label" Content="行业：" FontFamily="微软雅黑 light" FontSize="25" Width="151" VerticalAlignment="Center" HorizontalAlignment="Left" Height="43" Margin="0,0,0,0"/>
                <Label x:Name="label1" Grid.Column="1" Content="场景：" FontFamily="微软雅黑 light" FontSize="25" Width="151" HorizontalAlignment="Left" VerticalAlignment="Center" Height="43" Margin="0,0,0,0"/>
                <ComboBox x:Name="comboBox" SelectedIndex="0"  FontFamily="微软雅黑 light" FontSize="20" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="250" Height="35" Margin="0,0,0,0">
                    <System:String>建材工程</System:String>
                </ComboBox>
                <ComboBox x:Name="comboBox1" SelectedIndex="0" FontFamily="微软雅黑 light" FontSize="20" Background="White" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="250" Height="35" Margin="0,0,0,0" BorderBrush="#FFACACAC" Foreground="Black">
                    <System:String>建材生产及运输碳排放</System:String>
                </ComboBox>

                <Label x:Name="label2" Grid.Row="2" Content="国家：" FontFamily="微软雅黑 light" FontSize="25" Width="151" VerticalAlignment="Center" HorizontalAlignment="Left" Height="43" Margin="0,0,0,0"/>
                <Label x:Name="label3" Grid.Row="2" Grid.Column="1" Content="地区：" FontFamily="微软雅黑 light" FontSize="25" Width="151" HorizontalAlignment="Left" VerticalAlignment="Center" Height="43" Margin="0,0,0,0"/>
                <ComboBox x:Name="comboBox2" SelectedIndex="0"  FontFamily="微软雅黑 light" FontSize="20" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" Width="250" Height="35" Margin="0,0,0,0" BorderBrush="#FFACACAC" Foreground="Black">
                    <System:String>中国</System:String>
                </ComboBox>
                <ComboBox x:Name="comboBox3" SelectedIndex="0"  FontFamily="微软雅黑 light" FontSize="20" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Width="250" Height="35" Margin="0,0,0,0" BorderBrush="#FFACACAC" Foreground="Black">
                    <System:String>广东省</System:String>
                </ComboBox>

            </Grid>
            <Label Content="请选择匹配使用的标准：" FontFamily="微软雅黑 light" FontSize="25" Margin="10"/>
            <ComboBox x:Name="comboBox4" SelectedIndex="0"  FontFamily="微软雅黑 light" FontSize="20"  Margin="20,0,20,20">
                <System:String>国标-建筑碳排放计量标准GBT51366/2019</System:String>
            </ComboBox>
            <Button Content="计算"  HorizontalAlignment="Right" FontFamily="微软雅黑 light" FontSize="20"  Width="150" Height="35" Margin="20,0,20,20" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>

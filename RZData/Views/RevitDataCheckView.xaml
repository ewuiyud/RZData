<Window x:Class="RZData.Views.RevitDataCheckView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RZData.Views"
             xmlns:userControl ="clr-namespace:RZData.UserControls"
             mc:Ignorable="d" 
             Title="数据校验"
             MaxHeight="750" MinHeight="750" MaxWidth="800" MinWidth="800">
    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/RZData;component/Styles/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="#F9F5EB">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TabControl Margin="20" x:Name="MainTabControl" FontSize="14" FontFamily="微软雅黑 Light" Background="#F5F8FA">
            <TabItem Header="参数项错误" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <userControl:SearchBox  Margin="10,20,10,10" Text="{Binding SearchKeyword,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <!--<TextBox Style="{StaticResource SeachBox}" x:Name="SearchTextBox" Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" Margin="10,20,10,10"
         GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Grid.ColumnSpan="2"/>-->
                    <TreeView Grid.Row="1" ItemsSource="{Binding ShowParametersCheckElements.FamilyCategories}" Margin="10,0"
                          SelectedItemChanged="TreeView_SelectedItemChanged">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="{x:Type TreeViewItem}">
                                <Setter Property="IsExpanded" Value="True"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Families}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Style="{StaticResource NoBorderTextBox}" Text="{Binding Name}"/>
                                </StackPanel>
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding FamilyExtends}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox VerticalAlignment="Center" IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type TreeViewItem}},
                                                Path=IsSelected}"/>
                                            <TextBox PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown" Style="{StaticResource NoBorderTextBox}" Text="{Binding Name}" Width="auto"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                    <Button Grid.Row="2" Content="导出" Margin="0,5,10,5" Height="30" Width="100" HorizontalAlignment="Right" Command="{Binding ParameterExportCommand}" Grid.Column="1" VerticalAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="匹配族库表">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <TreeView Grid.Row="1"  ItemsSource="{Binding FamilyNameCheckElements.FamilyCategories}" Margin="10,10,10,0" HorizontalAlignment="Stretch" 
      SelectedItemChanged="TreeView_SelectedItemChanged">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="{x:Type TreeViewItem}">
                                <Setter Property="IsExpanded" Value="True"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Families}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Style="{StaticResource NoBorderTextBox}" Text="{Binding Name}"/>
                                </StackPanel>
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <HierarchicalDataTemplate ItemsSource="{Binding FamilyExtends}">
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox VerticalAlignment="Center" IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type TreeViewItem}},
                                              Path=IsSelected}"/>
                                            <TextBox PreviewMouseLeftButtonDown="TextBox_PreviewMouseLeftButtonDown" Style="{StaticResource NoBorderTextBox}" Text="{Binding Name}" Width="200"/>
                                        </StackPanel>
                                    </HierarchicalDataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                    <Button Grid.Row="2" Content="导出" HorizontalAlignment="Right" Height="30" Margin="10,5" Width="100" Command="{Binding FamilyExportCommand}"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Border Grid.Column="1" BorderThickness="1" BorderBrush="#acacac" Margin="20">
            <Grid Background="#F5F8FA" >
                <TextBlock Text="选择组类型以查看未匹配模板构件" Margin="20,20,20,80" FontSize="18"
                       HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="微软雅黑 Light" Foreground="Black"/>
                <DataGrid ItemsSource="{Binding SelectedItem.Parameters}" IsReadOnly="True" CanUserAddRows="False" FontSize="14"
                       FontFamily="微软雅黑 Light" Background="White" RowHeight="28" 
                      HorizontalScrollBarVisibility="Disabled" CanUserResizeColumns="False"
                  AutoGenerateColumns="False" Margin="20" Width="auto" CanUserSortColumns="False" ColumnHeaderHeight="40" RowHeaderWidth="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="参数名称" Binding="{Binding Name}" Width="211"/>
                        <DataGridTextColumn Header="状态" Binding="{Binding ShowValue}" Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowValue}" Value="缺失">
                                            <Setter Property="Foreground" Value="Red"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ShowValue}" Value="正常">
                                            <Setter Property="Foreground" Value="Black"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                    <DataGrid.Style>
                        <Style TargetType="DataGrid">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=MainTabControl, Path=SelectedIndex}" Value="0">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=MainTabControl, Path=SelectedIndex}" Value="1">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Style>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</Window>

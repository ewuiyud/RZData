<Window x:Class="RZData.Views.RevitDataEntryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RZData.Views"
              xmlns:userControls="clr-namespace:RZData.UserControls"
             mc:Ignorable="d" 
             Title="数据批量录入"
             MaxHeight="750" MinHeight="750" MaxWidth="900" MinWidth="900">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/RZData;component/Styles/Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="#F9F5EB">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Grid Margin="20" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <userControls:SearchBox Grid.Row="1"  Text="{Binding SearchKeyword,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="2,5"/>
            <ComboBox Style="{StaticResource cmbstyle}" Grid.Row="2"  Margin="2,0,2,5" FontFamily="微软雅黑 Light" FontSize="14"
                      ItemsSource="{Binding Families}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedElement}"  />
            <TreeView Grid.Row="3" ItemsSource="{Binding ShowElements.FamilyCategories}" Margin="2,0,2,0" HorizontalAlignment="Stretch" 
                      FontSize="14" FontFamily="微软雅黑 Light" Background="#F5F8FA"
                      SelectedItemChanged="TreeView_SelectedItemChanged">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <EventSetter Event="Loaded" Handler="TreeViewItem_Loaded"/>
                    </Style>
                </TreeView.ItemContainerStyle>
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Families}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}"/>
                        </StackPanel>
                        <HierarchicalDataTemplate.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding FamilyExtends}">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type TreeViewItem}},
                                        Path=IsSelected}"/>
                                    <TextBlock Text="{Binding Name}" Width="auto"/>
                                </StackPanel>
                                <HierarchicalDataTemplate.ItemTemplate>
                                    <HierarchicalDataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox VerticalAlignment="Center" IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type TreeViewItem}},
                                        Path=IsSelected}"/>
                                            <TextBlock Text="{Binding Name}" Width="auto"/>
                                        </StackPanel>
                                        <HierarchicalDataTemplate.ItemTemplate>
                                            <HierarchicalDataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <CheckBox VerticalAlignment="Center" IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type TreeViewItem}},
        Path=IsSelected}"/>
                                                    <TextBlock Text="{Binding Name}" Width="auto"/>
                                                </StackPanel>
                                            </HierarchicalDataTemplate>
                                        </HierarchicalDataTemplate.ItemTemplate>
                                    </HierarchicalDataTemplate>
                                </HierarchicalDataTemplate.ItemTemplate>
                            </HierarchicalDataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Grid>
        <Border Grid.Column="1" BorderThickness="1" BorderBrush="#acacac" Margin="20">
            <Grid Background="#F5F8FA">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <DataGrid ItemsSource="{Binding SelectedItem.Parameters}" IsReadOnly="True" CanUserAddRows="False" FontSize="14"
                       FontFamily="微软雅黑 Light" Background="White" RowHeight="28" 
                      HorizontalScrollBarVisibility="Disabled" CanUserResizeColumns="False"
                  AutoGenerateColumns="False" Margin="20" Width="auto" CanUserSortColumns="False" ColumnHeaderHeight="40" RowHeaderWidth="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="参数名称" Binding="{Binding Name}" Width="100"/>
                        <DataGridTextColumn Header="参数类型" Binding="{Binding ValueType}" Width="100"/>
                        <DataGridTemplateColumn Header="参数值" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Value,UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource SimbleTextBox}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                            <DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Value,Mode=TwoWay}" Style="{StaticResource SimbleTextBox}"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellEditingTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="状态" Binding="{Binding Status}" Width="50">
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <Button Grid.Row="1" Content="确定" Margin="20" HorizontalAlignment="Right" Width="80" Height="30" FontSize="18" Command="{Binding OKCommand}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
